<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_notesView">
    <!-- Notes Fragment -->
    <fragment
        android:id="@+id/nav_notesView"
        android:name="com.example.bezpiecznynotatnik.fragments.NotesFragment"
        android:label="Notes">
        <action
            android:id="@+id/action_nav_displayNote_to_nav_noteInput"
            app:destination="@id/nav_noteInput"
            app:popUpTo="@id/nav_notesView"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/nav_displayNote"
        android:name="com.example.bezpiecznynotatnik.fragments.DisplayNoteFragment"
        android:label="Display Note">

    </fragment>
    <!-- Add Note Fragment -->
    <fragment
        android:id="@+id/nav_noteInput"
        android:name="com.example.bezpiecznynotatnik.fragments.NoteInputFragment"
        android:label="Add Note" >
        <argument
            android:name="noteId"
            app:argType="integer" />
        <argument
            android:name="noteContent"
            app:argType="string" />
    </fragment>
    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.bezpiecznynotatnik.fragments.SettingsFragment"
        android:label="Settings" >
        <action
            android:id="@+id/action_settings_to_account"
            app:destination="@id/fragment_account" />
    </fragment>

    <fragment
        android:id="@+id/fragment_account"
        android:name="com.example.bezpiecznynotatnik.fragments.AccountFragment"
        android:label="Account" />

</navigation>